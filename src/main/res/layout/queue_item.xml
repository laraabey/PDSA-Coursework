<?xml version="1.0" encoding="utf-8"?>
<!-- queue_item.xml - RecyclerView Item Layout -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Left Border Indicator -->
        <View
            android:id="@+id/viewBorder"
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:background="#667eea"
            android:layout_marginEnd="12dp" />

        <!-- Car Information -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCarPlate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸš— ABC-1234"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvCarDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1st â€¢ Token #001 â€¢ 9:26 AM"
                android:textColor="#666666"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Waiting Time Info -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvWaitingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15m"
                android:textColor="#667eea"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEstimatedRemaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~3m left"
                android:textColor="#28a745"
                android:textSize="11sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>