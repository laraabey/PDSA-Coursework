<?xml version="1.0" encoding="utf-8"?>
<!-- activity_main_control.xml - Screen 1: Control Panel -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- App Header -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/header_gradient"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Queue Control"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Live parking management"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:alpha="0.9" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Quick Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Cars Waiting -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvWaitingCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textColor="#667eea"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waiting"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Available Slots -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="3dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvAvailableSlots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18"
                        android:textColor="#667eea"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Average Wait -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvAvgWait"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="#667eea"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avg Wait"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Next Car Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/success_gradient"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEXT CAR TO ENTER"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:alpha="0.9"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvNextCarPlate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸš— ABC-1234"
                    android:textColor="@android:color/white"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvNextCarInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Token #001 â€¢ Waiting 15 mins â€¢ Est: 3 mins left"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:alpha="0.9" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Add Car Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âž• Add New Car"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/etCarPlate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter car number plate"
                    android:padding="15dp"
                    android:background="@drawable/input_background"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"
                    android:inputType="textCapCharacters" />

                <Button
                    android:id="@+id/btnAddCar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add to Queue"
                    android:background="@drawable/primary_button"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:padding="15dp"
                    android:layout_marginBottom="12dp"
                    android:textAllCaps="false" />

                <!-- Token Preview -->
                <LinearLayout
                    android:id="@+id/layoutTokenPreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f8f9fa"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tvTokenPreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next Token: #005"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/tvPositionPreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Position: 5th â€¢ Est. Wait: ~18 minutes"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Main Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnAllowEntry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="âœ… Allow Entry"
                android:background="@drawable/success_button"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:padding="15dp"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnShowEstimates"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="â±ï¸ Show Estimates"
                android:background="@drawable/warning_button"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:padding="15dp"
                android:textAllCaps="false" />

        </LinearLayout>

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnViewQueue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="ðŸ“‹ View Queue"
                android:background="@drawable/secondary_button"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:textSize="14sp"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnPriority"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:text="ðŸš¨ Priority"
                android:background="@drawable/danger_button"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:textSize="14sp"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnRefresh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="ðŸ”„ Refresh"
                android:background="@drawable/secondary_button"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:textSize="14sp"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
